{
  "manifest_version": 3,
  "name": "AbemaTV Add-On",
  "description": "AbemaTVに便利な機能を追加する拡張機能です。",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://abema.tv/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inline.js"
      ],
      "matches": [
        "https://abema.tv/*"
      ]
    }
  ]
}
